<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="12dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nomeLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Local"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#222"/>

        <TextView
            android:id="@+id/tipoEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Evento"
            android:textStyle="italic"
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data"
                android:textColor="#555"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/pessoas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pessoas"
                android:textColor="#555"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/impacto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Impacto"
                android:textColor="#D84315"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/deletar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_delete_24"
            android:tint="#F44336"
            android:contentDescription="Deletar"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>